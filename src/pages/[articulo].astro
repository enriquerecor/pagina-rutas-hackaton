---
import Layout from "../layouts/Layout.astro";
import { rutas } from "../data/rutas";
import ArticuloRuta from "../components/ArticuloRuta.astro";

// Get the id from the URL

const { articulo } = Astro.params;

const ruta = rutas[articulo];
---

<style>
  body {
    padding: 20px 100px;
  }
</style>

<Layout title={ruta}>
  <ArticuloRuta ruta={ruta} />
</Layout>